# What user do you want to install things as locally?
_USER_NAME="crystal"

# Important to always install.
ALWAYS_INSTALL=(
colortest
curl
fd-find
fzf
htop
make 
ncdu
neofetch  # info display
ranger  # ncurses file manager
ripgrep
tmux  # Terminal multiplexer
tree  # File displayer
wget
whois
)

INSTALL_MESA_UTILS=1
MESA_UTILS=(
mesa-utils  # Mesa library
libgl1-mesa-glx # Mesa library
)

# For general desktop applications
INSTALL_DESKTOP_APPS=1
DESKTOP_APPS=(
audacity  # Audio editor
kitty  # Terminal emulator on the GPU
vlc  # Watch video software
obs-studio  # Streaming software
transmission  # Torrent software
ttf-mscorefonts-installer  # Font software
)
INSTALL_STEAM_APT=1

# For general desktop applications
INSTALL_LIBRE_OFFICE=1

# For gaming stuffs
INSTALL_GAMING_APPS=1

# For things like Krita, Inkscape
INSTALL_CREATIVE_APPS=1
CREATIVE_APPS=(
krita
inkscape
digimend-dkms
)

# For general make configuration files
INSTALL_GENERAL_DEV=1
GENERAL_DEV=(
build-essential  # Build basics
cgdb  # ncurses graphical debugger
git  # Source control
mercurial  # Mercurial repositories
ffmpeg  # Audio development
binutils  # Binary utils
autoconf  # Make configurer
automake  # Make configurer
tig  # Git displayer
patch  # Lets you use patch files
valgrind  # Memory viewer
)

# For clang CPP dev
INSTALL_CPP_CLANG_DEV=1
CPP_CLANG_DEV=(
clang-10
clangd-10
clang-format-10
cmake  # Hell
)

# For making haskell apps
INSTALL_HASKELL_DEV=1

# For making python apps, uses APT.
INSTALL_PYTHON_APT_DEV=1
PYTHON_APT_DEV=(
python3
python3-pip
)

# For making rust apps
INSTALL_RUST_DEV=1

# For tweaking the gnome interface
INSTALL_GNOME_TWEAKS=1
